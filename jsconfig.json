{
	"compilerOptions": {
		"alwaysStrict": true,
		"allowJs": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2020"],
		"target": "es2020",
		"module": "es2020",
		"baseUrl": ".",
		"paths": {
			"@minecraft/*": ["node_modules/@minecraft/*/index.js"],
			"minecraft-extra/*": ["scripts/minecraft-extra/*"],
			"config.js": ["scripts/config.js"]
		},
		"maxNodeModuleJsDepth": -1,
		"moduleResolution": "Node16"
	},
	"include": ["./scripts/"],
	"exclude": ["loot_tables.gen.js"]
}
